<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScanDeviceBarcode">


    <SurfaceView
        android:id="@+id/cameraView"
        android:layout_width="281dp"
        android:layout_height="238dp"
        android:padding="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="15dp"
        android:layout_marginBottom="25dp"
        android:text="@string/scan_instructions_text"
        android:contentDescription="@string/logo_alt"
        android:textSize="24sp"
        android:layout_below="@+id/cameraView"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        tools:srcCompat="@mipmap/logo_foreground"
        android:layout_below="@+id/textView"/>


    <Button
        android:id="@+id/add_device_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_device_button_text"
        android:visibility="invisible"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>