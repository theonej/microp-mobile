<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/dashboard">

    <fragment
        android:id="@+id/connectToDeviceServer"
        android:name="com.microp.android.ConnectToDeviceServer"
        android:label="fragment_connect_to_device_server"
        tools:layout="@layout/fragment_connect_to_device_server" />
    <fragment
        android:id="@+id/scanDeviceBarcode"
        android:name="com.microp.android.ScanDeviceBarcode"
        android:label="fragment_scan_device_barcode"
        tools:layout="@layout/fragment_scan_device_barcode" >
        <action
            android:id="@+id/action_scanDeviceBarcode_to_connectToDeviceServer"
            app:destination="@id/connectToDeviceServer" />
    </fragment>
    <fragment
        android:id="@+id/dashboard"
        android:name="com.microp.android.Dashboard"
        android:label="fragment_dashboard"
        tools:layout="@layout/fragment_dashboard" >
        <action
            android:id="@+id/action_dashboard_to_scanDeviceBarcode"
            app:destination="@id/scanDeviceBarcode" />
    </fragment>
</navigation>